{
  "version": 2,
  "framework": null,
  "builds": [
    { "src": "vite.config.js", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
  { "src": "/(.*)\\.(js|css|png|jpg|jpeg|gif|svg|webp|ico|txt|json|woff2?)", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/robots.txt", "dest": "/robots.txt" },
    { "src": "/sitemap.xml", "dest": "/sitemap.xml" },
    { "src": "/(dashboard|main|content/.*|signin|signup)", "dest": "/index.html" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "redirects": [
    { "source": "/login", "destination": "/signin", "permanent": false },
    { "source": "/register", "destination": "/signup", "permanent": false }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    }
  ]
}
